from flask import Flask, request
from random import randint
import random, json

#'gil': ['14', '77', '79', '32', '49', '25'], 'rokcy': ['5', '47', '2', '20', '29', '12']
class Game:
    allGames = dict()  # contains all game id's

    def __init__(self):
        self.numCurrentplaying = 0  # checks how many current players there are in the game
        self.numPlayers = 0  # how many players should be in the game
        self.rounds = 3  # how many rounds are in each game defaults at 3
        self.currentRound = 1  # the current round of the game is being played
        self.hand = dict()  # each player has a value which is an array in the hand dict which contains the cards that each player has
        self.bluffs = dict()  # what each players bluff is (name:bluff)
        self.cards = []  # all the cards in play in the round(bluffs which are submitted)
        self.guess = dict()  # what each persons guess is including REAL
        self.playerid = []  # contains all the players id's we use this when looping through each turn cause can't do that with dict...
        self.playerNames = dict()  # all the players name key=id number value=name-string
        self.story = ""  # story line
        self.card = 0  # chosen card for that round
        self.totalscores = dict()  # total overall score
        self.scores = dict()  # score for that round
        self.turn = 0  #
        self.status = 'registering'
        self.storyTeller = ''
        self.hidden=False
        self.usedCards = []
        self.id = randint(1,10)  # makes a random id
        while self.id in self.allGames:  # makes sure that id isnâ€™t already used
            self.id = randint(1,25)
        self.allGames[self.id] = self  # adds id to dictionary

    def registerplayer(self, name):
        if int(self.numCurrentplaying) == int(self.numPlayers):
            print("current cards out are: ", self.hand)
            return json.dumps({"error": "max players in current game"})
        if name in self.playerNames.values():
            return json.dumps({"error": "Name already taken"})
        id = randint(10000, 99999)
        while id in self.playerNames.keys():
            id = randint(10000, 99999)
        self.playerid.append(id)
        self.playerNames[id] = name
        self.hand[name] = []
        self.numCurrentplaying += 1
        self.scores[name]=0
        self.totalscores[name]=0
        if int(self.numCurrentplaying) == int(self.numPlayers):
            self.status = 'ready'
            self.storyTeller=self.getnextstoryteller(check=1)
            self.giveoutHand()
            print("current cards out are: ", self.hand)
            self.scores[name] = 0
            self.totalscores[name] = 0
        print('name is registered', ' player names are: ', self.playerNames, "  id is ", json.dumps(int(id)))
        return json.dumps(int(id))

    def getStory(self):
        print(self.status)
        if self.status == 'registering':  # int(self.numCurrentplaying) < int(self.numPlayers) or
            return json.dumps({'status': 'registering'})
        if self.status == 'ready' and self.currentRound <= self.rounds :
            print(self.turn , " line 63")
            return json.dumps({'status': 'ready', "storyTeller": self.storyTeller})
        if self.status == 'story_told':
            return json.dumps({'status': 'story_told', "storyTeller": self.storyTeller, "story": self.story})
        if self.status == 'next_round':
            self.updateScore()
            if self.turn < len(self.playerid):
                self.newTurn()
                print(self.storyTeller, " is the storyTeller line 70")
            else:
                print("new round line 72")
                self.newRound()
            return json.dumps({'status': 'ready'})
        return json.dumps({"status": "DONE"})

    def giveoutHand(self):
        for key in self.playerNames.keys():
            arr = []
            for _ in range(0, 6):
                x = randint(1, 80)
                while x in self.usedCards:
                    x = randint(1, 80)
                arr.append(str(x))
                self.usedCards.append(x)
            self.hand[self.playerNames[key]] = arr

    def insertToHand(self, player):
        print(self.hand[self.playerNames[int(player)]], "   ", len(self.hand[self.playerNames[int(player)]]), " line 89")
        while len(self.hand[self.playerNames[int(player)]]) < 6:
            x = randint(1, 80)
            while x in self.usedCards:
                x = randint(1, 80)
            self.usedCards.append(x)
            self.hand[self.playerNames[int(player)]].append(str(x))
        print("hand has changed ",self.hand[self.playerNames[int(player)]], "   ", len(self.hand[self.playerNames[int(player)]]), " line 94")

    def playerlist(self):
        lst = []
        for value in self.playerNames.values():
            lst.append(value)
        return lst
    def mixCards(self):
        if len(self.cards) < int(self.numPlayers):
            guess = dict()
            for value in self.playerNames.values():
                guess[value] = "hidden"
            return guess
        else:
            self.hidden=True
        mix = []
        num = int(self.numPlayers)
        print("cards length list is: ", len(self.cards), " amount of players -1 is :", self.numCurrentplaying - 1,
              " statement is: ", len(self.cards) != self.numCurrentplaying - 1 , " line 116")
        used = []
        for _ in range(0, len(self.cards)):
            x = randint(0, num - 1)
            while x in used:
                x = randint(0, num - 1)
            if len(self.cards) > x:
                used.append(x)
                mix.append(str(self.cards[x]))
            # print("x is",x," cards is and its length is ", self.cards," ",len(self.cards))
        return mix
    def getGuesses(self):
        print("Cards are: ", self.cards, " amount of players are: ", self.numPlayers, " line 124")
        if len(self.cards) < int(self.numPlayers):
            guess = dict()
            for value in self.playerNames.values():
                guess[value] = "hidden"
            return guess
        else:
            self.hidden=True
        if self.turn >= len(self.playerid) - 1:
            self.status = "next_round"  # ready for next round
        else:
            self.status = "DONE"
        return json.dumps(self.guess)

    def getnextstoryteller(self, check=0):
        if check == 1:
            for value in self.playerNames.values():
                print("new story teller:", value, " line 139")
                return value
        cnt = 0
        self.turn += 1
        for value in self.playerNames.values():
            if cnt == 1:
                return value
            if self.storyTeller == value:
                cnt = 1
        return value
    def newTurn(self):
        self.turn+=1
        self.storyTeller = self.getnextstoryteller()
        self.story = ""  # story line
        self.guess = dict()
        self.bluffs = dict()
        self.card = 0   
        self.status= 'ready'
        self.hidden=False
        for key in self.scores.keys():
            self.scores[key]=0
    def newRound(self):
        self.currentRound += 1  # the current round of the game is being played
        self.hand = dict()  # each player has a value which is an array in the hand dict which contains the cards that each player has
        self.bluffs = dict()  # what each players bluff is (name:bluff)
        self.cards = []  # all the cards in play in the round(bluffs which are submitted)
        self.guess = dict()  # what each persons guess is including REAL
        self.story = ""  # story line
        self.card = 0  # chosen card for that round
        self.hidden=False
        for key in self.scores.keys():
            self.scores[key]=0
        self.turn = 0  #
        self.status = 'ready'
        self.storyTeller = self.getnextstoryteller(1)
        self.usedCards = []
        print("hand is changing", " line 176")
        self.giveoutHand()
    def updateScore(self):
        cntCorrect=0
        for key in self.guess.keys():
            if key != "REAL" and key != self.storyTeller and key in self.guess:
                if str(self.guess[key])== str(self.card):
                    cntCorrect+=1
        if cntCorrect == 0 or cntCorrect == self.numPlayers-1:
            for value in self.playerNames.values():
                self.totalscores[value]+=2
                self.scores[value]+=2
        else:
            for value in self.playerNames.values():
                self.totalscores[self.storyTeller]+=3
                self.scores[self.storyTeller]+=3
                if self.guess[value] == str(self.card):
                    self.totalscores[value]+=3
                    self.scores[value]+=3
                else:
                    name= self.get_key(self.guess[value])
                    if name in self.totalscores and name in self.scores:
                        self.totalscores[name]+=1
                        self.scores[name]+=1
    def get_key(self, val):
        for key in self.guess.items():
            if val == key:
                return key

        return "key doesn't exist"

app = Flask(__name__)

def get_game(game_id):  # get the current game object
    if game_id is None or not str(game_id).isnumeric():
        return "game parameter is required and must be a number."
    try:
        return Game.allGames[int(game_id)]
    except KeyError:
        return "No such game"


@app.route("/newgame")
def newgame():
    g = Game()
    players = request.args['numPlayers']
    # rounds= request.args['numRounds']
    # if str(rounds).isnumeric() and int(rounds)>0:
    #     g.rounds=rounds
    # else:
    g.rounds = 3
    if str(players).isnumeric() and int(players) > 0:
        g.numPlayers = players
    else:
        g.numPlayers = 1
    print(str(g.id), " line 205")
    return json.dumps({"gameID": g.id})


@app.route("/register")
def register():
    game = request.args['game']
    print(game, " -game id")
    player = request.args['newPlayer']
    g = get_game(game)
    if type(g) is str:
        return json.dumps({"error": 'No such game'})
    check = g.registerplayer(str(player))
    if str(check).isnumeric():
        return json.dumps({"playerID": check.strip()})
    return check


@app.route("/getPlayerNames")
def getPlayerNames():
    game = request.args['game']
    g = get_game(game)
    if type(g) is str:
        return 'No such game'
    pl = g.playerlist()
    print("player names are: ", pl, " line 230")
    return json.dumps(pl)


@app.route("/getMyHand")
def getMyHand():
    game = request.args['game']
    player = request.args['player']
    g = get_game(game)
    if type(g) is str:
        return 'No such game'
    if str(player).isnumeric() and g.playerNames[int(player)] in g.hand:
        # return json.dumps(g.hand[g.playerNames[player]])
        print({"player hand": g.hand[g.playerNames[int(player)]]}, " is player ", str(g.playerNames[int(player)]),
              " hand")
        return json.dumps(g.hand[g.playerNames[int(player)]])
    return "No such player"


@app.route("/lead")
def lead():
    game = request.args['game']
    g = get_game(game)
    if type(g) is str:
        return 'No such game'
    player = request.args['player']
    card = request.args['card']
    story = request.args['story']
    if g.storyTeller != g.playerNames[int(player)]:
        return "Not your turn"
    if g.turn >= len(g.numPlayers):
        if g.currentRound < g.rounds:
            g.newRound()
        else:
            g.status = 'DONE'
            return "OK"
    if str(card).isnumeric():
        g.card = str(card)
        g.guess['REAL'] = str(card)
        g.guess[g.playerNames[int(player)]] = "hidden"
        g.cards.append(str(card))
        print("storyTellers hand is: ", g.hand[g.playerNames[int(player)]], " line 271")
        g.hand[g.playerNames[int(player)]].remove(str(card))
        g.insertToHand(int(player))
    g.story = str(story)
    g.status = 'story_told'
    return "OK"


@app.route("/getStory")
def getStory():
    game = request.args['game']
    g = get_game(game)
    if type(g) is str:
        return 'No such game'
    story = g.getStory()
    return story


@app.route('/submitBluff')
def submitBluff():
    game = request.args['game']
    g = get_game(game)
    if type(g) is str:
        return 'No such game'
    player = request.args['player']
    bluff = request.args['bluff']
    print("player ", player, " bluff is ", bluff)
    if str(player).isnumeric() and str(bluff).isnumeric() and int(player) in g.playerNames and str(bluff) in g.hand[
        g.playerNames[int(player)]]:
        g.bluffs[g.playerNames[int(player)]] = str(bluff)
        g.cards.append(str(bluff))
        print("players hand is: ", g.hand[g.playerNames[int(player)]], ", bluff is: ", int(bluff),"  line 333")
        g.hand[g.playerNames[int(player)]].remove(str(bluff))
        g.insertToHand(int(player))
        if str(bluff) == str(g.card):
            g.cntCorrect+=1
    return "OK"


@app.route('/getPlayedCards')
def getPlayedCards():
    game = request.args['game']
    g = get_game(game)
    if type(g) is str:
        return 'No such game'
    c = g.mixCards()
    print(c, " line 348")
    return json.dumps(c)


@app.route('/submitGuess')
def submitGuess():
    game = request.args['game']
    g = get_game(game)
    if type(g) is str:
        return 'No such game'
    player = request.args['player']
    guess = request.args['guess']
    if str(player).isnumeric() and str(guess).isnumeric and int(player) in g.playerNames:
        g.guess[g.playerNames[int(player)]] = str(guess)
    return "OK"


@app.route('/getGuesses')
